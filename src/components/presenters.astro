---
import { Image } from "astro:assets";

const presenters = [
  {
    name: "Dr. Emma Thompson",
    role: "AI Ethics Researcher",
    image: "/images/presenters/emma-thompson.jpg",
    description: "Leading expert in ethical AI applications for social good.",
  },
  {
    name: "Michael Chen",
    role: "Non-Profit Tech Strategist",
    image: "/images/presenters/michael-chen.jpg",
    description: "Helps charities leverage technology to maximize their impact.",
  },
  {
    name: "Sarah Okonkwo",
    role: "Cybersecurity Specialist",
    image: "/images/presenters/sarah-okonkwo.jpg",
    description: "Protects non-profits from digital threats and data breaches.",
  },
  {
    name: "Dr. Carlos Mendoza",
    role: "Sustainable Tech Innovator",
    image: "/images/presenters/carlos-mendoza.jpg",
    description: "Pioneers eco-friendly tech solutions for global challenges.",
  },
  {
    name: "Aisha Patel",
    role: "Digital Accessibility Advocate",
    image: "/images/presenters/aisha-patel.jpg",
    description: "Champions inclusive design in charitable tech initiatives.",
  },
  {
    name: "James Wilson",
    role: "Blockchain for Good Expert",
    image: "/images/presenters/james-wilson.jpg",
    description: "Implements blockchain for transparency in charitable operations.",
  },
];
---

<section id="presenters" class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-4 sm:gap-6">
      <h2 class="text-4xl font-medium tracking-tight sm:text-5xl">Our Presenters</h2>
      <p class="text-primary text-base sm:text-lg">
        Meet the experts who will be sharing their knowledge and insights at the conference.
      </p>
    </div>
    <div class="mt-10 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {presenters.map((presenter) => (
        <div class="flex flex-col items-center gap-4 rounded-lg bg-offset p-6 text-center">
          <Image
            src={presenter.image}
            alt={presenter.name}
            width={200}
            height={200}
            class="rounded-full"
          />
          <div>
            <h3 class="text-xl font-semibold">{presenter.name}</h3>
            <p class="text-primary">{presenter.role}</p>
          </div>
          <p class="text-sm">{presenter.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>