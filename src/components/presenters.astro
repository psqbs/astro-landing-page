---
const dummyImage = "https://cdn.midjourney.com/9f5412ac-1d05-40c5-afed-a53658c2a9a8/0_0.png";

const presenters = [
  {
    name: "Dr Emma Thompson",
    role: "Badaczka etyki AI",
    description: "Wiodąca ekspertka w dziedzinie etycznych zastosowań AI dla dobra społecznego.",
  },
  {
    name: "Michael Chen",
    role: "Strateg technologiczny dla organizacji non-profit",
    description: "Pomaga organizacjom charytatywnym wykorzystywać technologię do maksymalizacji ich wpływu.",
  },
  {
    name: "Sarah Okonkwo",
    role: "Specjalistka ds. cyberbezpieczeństwa",
    description: "Chroni organizacje non-profit przed zagrożeniami cyfrowymi i naruszeniami danych.",
  },
  {
    name: "Dr Carlos Mendoza",
    role: "Innowator zrównoważonych technologii",
    description: "Pionier ekologicznych rozwiązań technologicznych dla globalnych wyzwań.",
  },
  {
    name: "Aisha Patel",
    role: "Rzeczniczka dostępności cyfrowej",
    description: "Promuje inkluzywne projektowanie w inicjatywach technologicznych dla organizacji charytatywnych.",
  },
  {
    name: "James Wilson",
    role: "Ekspert blockchain dla dobra społecznego",
    description: "Wdraża technologię blockchain dla zwiększenia przejrzystości w działaniach charytatywnych.",
  },
];
---

<section id="presenters" class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-4 sm:gap-6">
      <h2 class="text-4xl font-medium tracking-tight sm:text-5xl">Nasi Prelegenci</h2>
      <p class="text-primary text-base sm:text-lg">
        Poznaj ekspertów, którzy podzielą się swoją wiedzą i spostrzeżeniami podczas konferencji.
      </p>
    </div>
    <div class="mt-10 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {presenters.map((presenter) => (
        <div class="flex flex-col items-center gap-4 rounded-lg bg-offset p-6 text-center">
          <img
            src={dummyImage}
            alt={presenter.name}
            width="200"
            height="200"
            class="rounded-full object-cover"
          />
          <div>
            <h3 class="text-xl font-semibold">{presenter.name}</h3>
            <p class="text-primary">{presenter.role}</p>
          </div>
          <p class="text-sm">{presenter.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>