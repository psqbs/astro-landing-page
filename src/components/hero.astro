---
const title = "Charytatywna konferencja IT";
const tagline = "Społeczności Order Of Devs";
const date = "27-29 listopada 2024";
const location = "Centrum Technologiczne, Warszawa";
const dummyImage = "https://cdn.midjourney.com/9f5412ac-1d05-40c5-afed-a53658c2a9a8/0_0.png";
---

<section class="relative h-full bg-black">
  <div class="absolute inset-0">
    <img
      class="h-full w-full object-cover opacity-40"
      src={dummyImage}
      alt="Charytatywna konferencja IT"
    />
  </div>
  <div class="relative flex h-full items-center justify-center">
    <div class="flex flex-col items-center gap-6 text-center px-4">
      <h1 class="gradient-text font-extrabold tracking-tighter text-6xl sm:text-8xl">
        {title}
      </h1>
      <p class="font-extrabold text-3xl sm:text-4xl text-white">
        {tagline}
      </p>
      <div class="flex flex-col items-center gap-2">
        <p class="text-content text-xl sm:text-2xl text-white">
          {date}
        </p>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 mt-4">
        <a
          href="#agenda"
          class="rounded-full bg-primary px-6 py-3 text-center font-bold text-white transition hover:text-white hover:bg-secondary"
        >
          Zobacz Agendę
        </a>
        <a
          href="#register"
          class="rounded-full border-2 border-current px-6 py-3 text-center font-bold text-white transition hover:bg-white hover:text-black"
        >
          Zarejestruj się
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-text {
    @apply bg-clip-text text-transparent;
    @apply bg-gradient-to-r from-primary to-secondary;
  }
</style>