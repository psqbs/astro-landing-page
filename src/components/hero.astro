---
const title = "Charytatywna konferencja IT";
const tagline = "Wspieramy Zmiany Poprzez Technologię";
const date = "27-29 listopada 2023";
const location = "Centrum Technologiczne, Warszawa";
const dummyImage = "https://cdn.midjourney.com/9f5412ac-1d05-40c5-afed-a53658c2a9a8/0_0.png";
---

<section class="relative h-full bg-black">
  <div class="absolute inset-0">
    <img
      class="h-full w-full object-cover opacity-40"
      src={dummyImage}
      alt="Charytatywna konferencja IT"
    />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <div class="flex flex-col items-center gap-2 sm:items-start">
      <h1 class="gradient-text text-center font-extrabold tracking-tighter text-8xl">
        {title}
      </h1>
      <p class="text-center font-extrabold text-4xl text-white sm:text-left">
        {tagline}
      </p>
      <div class="flex flex-col items-center gap-2 sm:flex-row">
        <p class="text-content text-center text-2xl sm:text-left">
          {date}
        </p>
        <span class="hidden text-2xl sm:inline">•</span>
        <p class="text-content text-center text-2xl sm:text-left">
          {location}
        </p>
      </div>
      <div class="flex flex-col gap-3 min-[500px]:flex-row">
        <a
          href="#agenda"
          class="rounded-full bg-primary px-6 py-3 text-center font-bold text-white transition hover:bg-secondary"
        >
          Zobacz Agendę
        </a>
        <a
          href="#register"
          class="rounded-full border-2 border-current px-6 py-3 text-center font-bold text-white transition hover:bg-white hover:text-black"
        >
          Zarejestruj się
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-text {
    @apply bg-clip-text text-transparent;
    @apply bg-gradient-to-r from-primary to-secondary;
  }
</style>