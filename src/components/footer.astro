---
import { Icon } from "astro-icon/components";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "#",
    description: "Charity IT Conference Home",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/yourgithub/charity-it-conference",
    description: "View source on GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://twitter.com/charityitconf",
    description: "Charity IT Conference on Twitter",
    icon: "fa-brands:twitter",
  },
  {
    url: "https://linkedin.com/company/charity-it-conference",
    description: "Charity IT Conference on LinkedIn",
    icon: "fa-brands:linkedin",
  },
];
---

<footer class="bg-primary text-white">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <div>
        <h3 class="text-lg font-semibold">About Us</h3>
        <p class="mt-4 text-sm">
          The Charity IT Conference brings together technology experts and non-profit organizations to leverage tech for social good.
        </p>
      </div>
      <div>
        <h3 class="text-lg font-semibold">Quick Links</h3>
        <ul class="mt-4 space-y-2">
          <li><a href="#" class="text-sm hover:underline">Home</a></li>
          <li><a href="#agenda" class="text-sm hover:underline">Agenda</a></li>
          <li><a href="#presenters" class="text-sm hover:underline">Presenters</a></li>
          <li><a href="#register" class="text-sm hover:underline">Register</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold">Contact Us</h3>
        <ul class="mt-4 space-y-2">
          <li class="text-sm">Email: info@charityitconf.org</li>
          <li class="text-sm">Phone: +1 (123) 456-7890</li>
          <li class="text-sm">Address: 123 Tech Lane, New York, NY 10001</li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold">Follow Us</h3>
        <ul class="mt-4 flex space-x-4">
          {links.map((link) => (
            <li>
              <a
                class="flex size-8 items-center justify-center rounded-full border border-white hover:bg-white hover:text-primary"
                href={link.url}
              >
                <span class="sr-only">{link.description}</span>
                <Icon class="size-4" name={link.icon} />
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    <div class="mt-8 border-t border-white/10 pt-8 text-center">
      <p class="text-sm">&copy; 2023 Charity IT Conference. All rights reserved.</p>
    </div>
  </div>
</footer>
